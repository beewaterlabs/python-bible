# Slice notes

word = "supercalifragilisticexpialidocious"
        
word[5:9:1]
        
'cali'

word[8]
        
'i'
word[:8]
        
'supercal'

word[::-1]
        
'suoicodilaipxecitsiligarfilacrepus'

word[word.index("docious"):]
        
'docious'

# Facts

The basic slice format is:

variable[start:end:step]

# Find command:

x = "happy birthday"

x.find("birthday")
6

# Is alpha command:

"abcd".isalpha()
True

# Is alnum command:

y = "happybirthday123"
y.isalnum()
True

# UPPER / lower commands:

x = "Happy Birthday"
x.lower()
'happy birthday'
x.upper()
'HAPPY BIRTHDAY'



